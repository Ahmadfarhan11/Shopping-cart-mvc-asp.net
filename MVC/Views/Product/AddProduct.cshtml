@model MVC.Models.Product
@{
    Layout = null;
}
<link type="text/css" rel="stylesheet" href="~/Content/Login.css" />

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">

    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
</head>

<body class="align">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

    <div class="shaddowsignup">
        <h2 style="color:white;font-size:300%">Product Information.</h2>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
        <div class="grid" style="text-align:center">


            <div class="form login">


                <script src="~/JS/products.js" text="text/javascript"></script>

                <div class="form__field">



                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { id = "productName", oninvalid = "InvalidProductName(this);", type = "text", name = "productname", @class = "form__input", placeholder = "product name", required = "required" } })
                    @*                @Html.ValidationMessageFor(model => model.username, null, new {@style = "color:red;"})*@
                </div>

                <div class="form__field">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { id = "price", oninvalid = "InvalidProductName(this);", type = "text", name = "price", @class = "form__input", placeholder = "price", required = "required" } })
                    @*                @Html.ValidationMessageFor(model => model.username, null, new {@style = "color:red;"})*@

                </div>
                <div class="form__field">
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { id = "quantity", type = "text", name = "price", @class = "form__input", placeholder = "quantity ", required = "required" } })

                </div>
                <div class="form__field">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { id = "description", oninvalid = "InvalidProductName(this);", type = "text", name = "description", @class = "form__input", placeholder = "description", required = "required" } })

                </div>

                @using (Html.BeginForm("FileUpload", "Home", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))



                {

                <div class="form__field" style="text-align:center">
                    <input type="file" style="align-content:center;text-align:center;margin-left:140px" name="file" id="file" />
                </div>
                }
                <div class="form__field" style="background: #188FFF;">
                    <input type="submit" value="add" id="submitbtn" style="background:#188FFF;">
                </div>



<br /><br /><br />
                <div class="shaddowsignup">
                    <h2 style="color:white;font-size:300%">Delete Product</h2>
                </div>

                <div class="form__field">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { id = "delName", oninvalid = "InvalidProductName(this);", type = "text", name = "description", @class = "form__input", placeholder = "product name to delete", required = "required" } })

                </div>
                    <div class="form__field" style="background: #188FFF;">
                        <input type="submit" value="delete" id="deletebtn" style="background:#188FFF;">
                    </div>

                <br /><br /><br />



                <br /><br /><br />
                <div class="shaddowsignup">
                    <h2 style="color:white;font-size:300%">View Products</h2>
                </div>

                <div class="form__field">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { id = "viewName", oninvalid = "InvalidProductName(this);", type = "text", name = "description", @class = "form__input", placeholder = "Enter product name to view", required = "required" } })

                </div>
                <div class="form__field" style="background: #188FFF;">
                    <input type="submit" value="view" id="viewbtn" style="background:#188FFF;">
                </div>

                <br /><br /><br />




                <svg xmlns="http://www.w3.org/2000/svg" class="icons">
                    <symbol id="arrow-right" viewBox="0 0 1792 1792">
                        <path d="M1600 960q0 54-37 91l-651 651q-39 37-91 37-51 0-90-37l-75-75q-38-38-38-91t38-91l293-293H245q-52 0-84.5-37.5T128 1024V896q0-53 32.5-90.5T245 768h704L656 474q-38-36-38-90t38-90l75-75q38-38 90-38 53 0 91 38l651 651q37 35 37 90z" />
                    </symbol>
                    <symbol id="lock" viewBox="0 0 1792 1792">
                        <path d="M640 768h512V576q0-106-75-181t-181-75-181 75-75 181v192zm832 96v576q0 40-28 68t-68 28H416q-40 0-68-28t-28-68V864q0-40 28-68t68-28h32V576q0-184 132-316t316-132 316 132 132 316v192h32q40 0 68 28t28 68z" />
                    </symbol>
                    <symbol id="user" viewBox="0 0 1792 1792">
                        <path d="M1600 1405q0 120-73 189.5t-194 69.5H459q-121 0-194-69.5T192 1405q0-53 3.5-103.5t14-109T236 1084t43-97.5 62-81 85.5-53.5T538 832q9 0 42 21.5t74.5 48 108 48T896 971t133.5-21.5 108-48 74.5-48 42-21.5q61 0 111.5 20t85.5 53.5 62 81 43 97.5 26.5 108.5 14 109 3.5 103.5zm-320-893q0 159-112.5 271.5T896 896 624.5 783.5 512 512t112.5-271.5T896 128t271.5 112.5T1280 512z" />
                    </symbol>
                </svg>

            </div>
        </div>
    }
    @if (ViewBag.Message != null)
    {
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
    }
    <script type="text/javascript">
        $(document).ready(function () {
            alert('invalid id to view');
            $('#submitbtn').click(function () {
                var id = $('#quantity');
                if (Math.floor(id) == id && $.isNumeric(id))
                    alert('yes its an int!');
                else
                    alert('invalid quantity value');

            })
        })
    </script>
</body>

</html>