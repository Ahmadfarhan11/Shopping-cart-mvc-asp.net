@model MVC.Models.User
@{
    Layout = null;
}

@*<link type="text/css" rel="stylesheet" href="~/Content/stylesheet.css"/>*@
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">

    <title>SignUp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
</head>
<body style="background: #F9F9FA;">

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


<div class="shaddowsignup">
    <a href="@Url.Action("MainPage", "Home")" title="List View" class="links">
        <img style="width: 100px; height: 100px; float: left; margin-left: 20px;" src="@Url.Content("~/images/NS1.png")"/>
    </a>
    <h2 style="color: #EE4522; float: left; margin-left: -25px; margin-top: 43px; font-size: 150%;">eutron Store.</h2>
</div>


<form>
    <input type="text" class="txtPost" placeholder="Post a question?" required/>
    <button class="btnPost btnBlue">Post</button>
</form>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="signup" style="text-align: center;">

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        <script src="~/JS/signup.js" text="text/javascript"></script>


        @Html.EditorFor(model => model.Name, new {htmlAttributes = new {placeholder = "Enter your name", @class = "textBoxes", required = "required"}})
        @*            @Html.ValidationMessageFor(model => model.Name, null, new {@style = "color:red;"})*@

        <br/>
        <br/>
        <br/>
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "Male",
                Value = "Male"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Female",
                Value = "Female",
            });
        }

        @Html.DropDownListFor(model => model.Gender, listItems, "Enter gender", new {@class = "dd", oninvalid = "InvalidSex(this);", requied = "required"})

        @*            @Html.ValidationMessageFor(model => model.Gender, null, new {@style = "color:red;"})*@
        <br/>
        <br/>
        @Html.EditorFor(model => model.Age, new {htmlAttributes = new {placeholder = "Enter your age in numbers", @class = "textBoxes", oninvalid = "InvalidAge(this);", requied = "required"}})
        @*            @Html.ValidationMessageFor(model => model.Age, null, new {@style = "color:red;"})*@


        @Html.EditorFor(model => model.Email, new {htmlAttributes = new {placeholder = "Enter your email", @class = "textBoxes", type = "email", oninvalid = "InvalidEmail(this);", requied = "required"}})
        @*            @Html.ValidationMessageFor(model => model.Email, null, new {@style = "color:red;"})*@


        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {placeholder = "PASSWORD", @class = "textBoxes", @type = "password", oninvalid = "InvalidPass(this);", requied = "required"}})
        @*            @Html.ValidationMessageFor(model => model.Password, null, new {@style = "color:red;"})*@
        <br/>
        <br/>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="signupbtn"/>
            </div>
        </div>
        <br/>

        @Html.ActionLink("SignUp as a Vendor", "vendorSignUp", null, new {@style = "color:#188FFF;text-decoration:none;"})
    </div>
}

</body>
</html>