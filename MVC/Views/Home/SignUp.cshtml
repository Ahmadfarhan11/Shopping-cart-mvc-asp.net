@model MVC.Models.User

@{
    Layout = null;
}
<link type="text/css" rel="stylesheet" href="~/Content/stylesheet.css"/>
<!DOCTYPE html>

<html>
<head>
    <title>SignUp</title>
</head>
<body style="background: #F9F9FA;">
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="shaddowsignup">
            <img style="width: 100px; height: 100px; float: left; margin-left: 20px;" src="@Url.Content("~/images/NS1.png")"/>
            <h2 style="color: #EE4522; float: left; margin-left: -25px; margin-top: 43px; font-size: 150%;">eutron Store.</h2>
        </div>

        <div class="signup" style="text-align: center;">

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})


            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {placeholder = "Enter your name", @class = "textBoxes"}})
            @Html.ValidationMessageFor(model => model.Name, null, new {@style = "color:red;"})

            <br/>
            <br/>
            <br/>
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Male",
                    Value = "Male"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Female",
                    Value = "Female",
                });
            }

            @Html.DropDownListFor(model => model.Gender, listItems, "Enter gender", new {@class = "dd",})
            @Html.ValidationMessageFor(model => model.Gender, null, new {@style = "color:red;"})
            <br/>
            <br/>
            @Html.EditorFor(model => model.Age, new {htmlAttributes = new {placeholder = "Enter your age in numbers", @class = "textBoxes"}})
            @Html.ValidationMessageFor(model => model.Age, null, new {@style = "color:red;"})


            @Html.EditorFor(model => model.Email, new {htmlAttributes = new {placeholder = "Enter your email", @class = "textBoxes"}})
            @Html.ValidationMessageFor(model => model.Email, null, new {@style = "color:red;"})


            @Html.EditorFor(model => model.Password, new {htmlAttributes = new {placeholder = "PASSWORD", @class = "textBoxes", @type = "password"}})
            @Html.ValidationMessageFor(model => model.Password, null, new {@style = "color:red;"})
            <br/>
            <br/>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="signupbtn"/>
                </div>
            </div>
            <br/>

            @Html.ActionLink("SignUp as a Vendor", "vendorSignUp", null, new {@style = "color:#188FFF;text-decoration:none;"})
        </div>


    </div>
}

</body>
</html>