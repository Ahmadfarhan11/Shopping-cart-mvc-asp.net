@model MVC.Models.User

@{
    Layout = null;
}
<link type="text/css" rel="stylesheet" href="~/stylesheet.css" />
<!DOCTYPE html>

<html>
<head>
    <title>SignUp</title>
</head>
<body style="background:#F9F9FA;">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="shaddowsignup">
                <img style="width:100px;height:100px;float:left;margin-left:20px;" src="@Url.Content("~/images/NS1.png")" />
                <h2 style="color:#EE4522;float:left;margin-left:-25px;margin-top:43px;font-size:150%;">eutron Store.</h2>
            </div>

            <div class="signup" style="text-align:center;">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "ENTER YOUR NAME", @class = "textBoxes" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                <br />
                <br />
                <br />
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "male",
                        Value = "male"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "female",
                        Value = "female",
                        
                    });
                   
                }

@Html.DropDownListFor(model => model.Gender, listItems,"enter gender", new { @class = "dd", })       
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                <br />
                <br />
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { placeholder="ENTER YOUR AGE IN NUMBERS", @class = "textBoxes" } })
                @Html.ValidationMessageFor(model => model.Age)
            
            
              @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "ENTER YOUR EMAIL", @class = "textBoxes" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })


                 @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "PASSWORD", @class = "textBoxes",@type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <br />
                <br />
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="signupbtn" />
                    </div>
                </div>
                <br />

           @Html.ActionLink("sign up as a Vendor Instead", "vendorSignUp", null,new { @style="color:#188FFF;text-decoration:none;"})
           </div>

            
        </div>
    }

</body>
</html>
