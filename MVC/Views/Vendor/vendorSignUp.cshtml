@model MVC.Models.Vendor

@{
    Layout = null;
}
<link type="text/css" rel="stylesheet" href="~/Content/stylesheet.css"/>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>vendorSignUp</title>
    
</head>
<body style="background: #F9F9FA;">
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm("vendorSignUp", "Vendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="shaddowsignup">
            <a href="@Url.Action("MainPage", "Home")" title="List View" class="links">
                <img style="width: 100px; height: 100px; float: left; margin-left: 20px;" src="@Url.Content("~/images/NS1.png")" />
            </a>
            <h2 style="color: #EE4522; float: left; margin-left: -25px; margin-top: 43px; font-size: 150%;">eutron Store.</h2>
        </div>

        <div class="signup" style="text-align: center;">



            @Html.EditorFor(model => model.VName, new { htmlAttributes = new { placeholder = "Name", @class = "textBoxes",required="required" } })
            @Html.ValidationMessageFor(model => model.VName, null, new { @style = "color:red;" })
            <br />
            <br />

            @Html.EditorFor(model => model.VEmail, new {htmlAttributes = new {placeholder = "Email", @class = "textBoxes", required = "required",@type="email" } })
            @Html.ValidationMessageFor(model => model.VEmail, null, new { @style = "color:red;" })


            <br/>
            <br/>


            @Html.EditorFor(model => model.VPassword, new {htmlAttributes = new {placeholder = "Password", @class = "textBoxes", required = "required" ,@type="password"} })
            @Html.ValidationMessageFor(model => model.VPassword , null, new { @style = "color:red;" })


            <br /><br />

                @Html.LabelFor(model=>model.VImage, htmlAttributes: new { @class = "control-label col-md-2" })
                    <input type="file" id="VendorImg" name="VendorImg" style="color:red;" accept=".png,.jpg" />

            
            <br/><br/>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" id="btn" class="signupbtn"/>
                </div>
            </div>
            <br/>
            @Html.ValidationSummary(false, "", new { @class = "text-danger", @Style = "color:red;" })


        </div>


    </div>
}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btn").click(function (e) {
                if ($("#VendorImg").val()=='')
                {
                    alert("!!Select an image!!")
                    e.preventDefault();
                }
                else{
                   
                }
                    
                    
                    });
        })

    </script>
</body>


</html>